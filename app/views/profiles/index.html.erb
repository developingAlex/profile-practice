<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Location</th>
      <th>Hobbies</th>
      <th>Banner image data</th>
      <th>Profile image data</th>
      <th>User</th>
      <th>Follower count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.location %></td>
        <td><%= profile.hobbies %></td>
        <td><%= profile.banner_image_data %></td>
        <td><%= profile.profile_image_data %></td>
        <td><%= profile.user %></td>
        <td><%= profile.follower_count %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

